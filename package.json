{
  "name": "chrome-jest-mock",
  "version": "1.0.2",
  "description": "Chrome-object mock for chrome extension testing with Jest",
  "main": "index.js",
  "scripts": {
    "prepublish": "tsc",
    "precommit": "lint-staged",
    "test": "jest",
    "watch:test": "nodemon -w __tests__ -w ./lib -e js,jsx -x npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvitaly/chrome-jest-mock.git"
  },
  "keywords": [
    "chrome",
    "jest",
    "mock"
  ],
  "author": "arvitaly",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arvitaly/chrome-jest-mock/issues"
  },
  "homepage": "https://github.com/arvitaly/chrome-jest-mock#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true,
    "verbose": true
  },
  "files": [
    "dist/"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.3",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "@types/jest": "^20.0.7"
  }
}
